<beans xmlns="http://www.springframework.org/schema/beans"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
 
 	<bean name="loginServiceTarget" class="com.myschool.user.service.LoginServiceImpl" >
		<property name="userDAO" ref="userDAO"></property>
	</bean>
	
	<bean id="loginService"
			class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
		<property name="transactionManager" ref="myTxManager"/>
		<property name="target" ref="loginServiceTarget"/>
		<property name="transactionAttributes">
			<props>
				<prop key="get*">PROPAGATION_REQUIRED,readOnly</prop>
				<prop key="*">PROPAGATION_REQUIRED</prop>
			</props>
		</property>
	</bean>
		
	<bean name="classteacherServiceTarget" class="com.myschool.user.service.TeachingStaffServiceImpl" >
		<property name="teachingStaffDAO" ref="teachingStaffDAO"></property>
	</bean>
	
	<bean id="classteacherService"
			class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
		<property name="transactionManager" ref="myTxManager"/>
		<property name="target" ref="classteacherServiceTarget"/>
		<property name="transactionAttributes">
			<props>
				<prop key="get*">PROPAGATION_REQUIRED,readOnly</prop>
				<prop key="*">PROPAGATION_REQUIRED</prop>
			</props>
		</property>
	</bean>
			
	
	<bean id="myTxManager" class="org.springframework.orm.hibernate3.HibernateTransactionManager">
		<property name="sessionFactory" ref="sessionFactory"/>
	</bean> 
	
		
</beans>