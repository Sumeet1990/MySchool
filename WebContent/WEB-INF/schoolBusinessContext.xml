<beans xmlns="http://www.springframework.org/schema/beans"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
 
  <bean name="schoolClassServiceTarget" class="com.myschool.service.SchoolClassServiceImpl" >
		<property name="schoolClassDAO" ref="schoolClassDAO"></property>
		<property name="schoolSubjectDAO" ref="schoolSubjectDAO"></property>
	</bean>
	
	<bean id="schoolClassService"
			class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
		<property name="transactionManager" ref="myTxManager"/>
		<property name="target" ref="schoolClassServiceTarget"/>
		<property name="transactionAttributes">
			<props>
				<prop key="get*">PROPAGATION_REQUIRED,readOnly</prop>
				<prop key="*">PROPAGATION_REQUIRED</prop>
			</props>
		</property>
	</bean>
 
 	<bean name="loginServiceTarget" class="com.myschool.service.LoginServiceImpl" >
		<property name="userDAO" ref="userDAO"></property>
		<property name="schoolConfigurationMap" ref="schoolConfigurationMap"></property>
	</bean>
	
	<bean id="loginService"
			class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
		<property name="transactionManager" ref="myTxManager"/>
		<property name="target" ref="loginServiceTarget"/>
		<property name="transactionAttributes">
			<props>
				<prop key="get*">PROPAGATION_REQUIRED,readOnly</prop>
				<prop key="*">PROPAGATION_REQUIRED</prop>
			</props>
		</property>
	</bean>
		
	<bean name="classSectionServiceTarget" class="com.myschool.service.ClassSectionServiceImpl" >
		<property name="staffDAO" ref="staffDAO"></property>
		<property name="classSectionDAO" ref="classSectionDAO"></property>				
	</bean>
	
	<bean id="classSectionService"
			class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
		<property name="transactionManager" ref="myTxManager"/>
		<property name="target" ref="classSectionServiceTarget"/>
		<property name="transactionAttributes">
			<props>
				<prop key="get*">PROPAGATION_REQUIRED,readOnly</prop>
				<prop key="*">PROPAGATION_REQUIRED</prop>
			</props>
		</property>
	</bean>
	
	<bean name="staffAppointmentTypeServiceTarget" class="com.myschool.service.StaffAppointmentTypeServiceImpl" >
		<property name="staffAppointmentTypeDAO" ref="staffAppointmentTypeDAO"></property>		
	</bean>
		<bean id="staffAppointmentTypeService"
			class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
		<property name="transactionManager" ref="myTxManager"/>
		<property name="target" ref="staffAppointmentTypeServiceTarget"/>
		<property name="transactionAttributes">
			<props>
				<prop key="get*">PROPAGATION_REQUIRED,readOnly</prop>
				<prop key="*">PROPAGATION_REQUIRED</prop>
			</props>
		</property>
	</bean>
	
	<bean name="schoolSubjectsServiceTarget" class="com.myschool.service.SchoolSubjectsServiceImpl" >
		<property name="schoolSubjectDAO" ref="schoolSubjectDAO"></property>		
	</bean>
	<bean id="schoolSubjectsService"
			class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
		<property name="transactionManager" ref="myTxManager"/>
		<property name="target" ref="schoolSubjectsServiceTarget"/>
		<property name="transactionAttributes">
			<props>
				<prop key="get*">PROPAGATION_REQUIRED,readOnly</prop>
				<prop key="*">PROPAGATION_REQUIRED</prop>
			</props>
		</property>
	</bean>
	
	<bean id="myTxManager" class="org.springframework.orm.hibernate3.HibernateTransactionManager">
		<property name="sessionFactory" ref="sessionFactory"/>
	</bean>		
	
