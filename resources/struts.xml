<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.enable.DynamicMethodInvocation" value="false" />
	<constant name="struts.devMode" value="false" />
	<constant name="struts.custom.i18n.resources" value="global" />

	<package name="default" extends="struts-default" namespace="/">
		<result-types>
			<result-type name="tiles"
				class="org.apache.struts2.views.tiles.TilesResult" />
		</result-types>
		
		<interceptors>
    		<interceptor name="commonSessionInterceptor"
        		class="com.myschool.interceptors.CommonSessionInterceptor" />
        	<!-- <interceptor name="commonLoginInterceptor"
        		class="com.myschool.interceptors.CommonLoginInterceptor" /> -->
        	
        	<interceptor-stack name="allYourParamsAreBelongToUsStack">
			    <interceptor-ref name="exception"/>
			    <interceptor-ref name="alias"/>
			    <interceptor-ref name="servletConfig"/>
			    <interceptor-ref name="i18n"/>
			 <!-- THE TRICK: NOW PREPARE() WILL FIND EVERYTHING SET -->     
			    <interceptor-ref name="staticParams"/>
			    <interceptor-ref name="actionMappingParams"/>
			    <interceptor-ref name="params">
			        <param name="excludeParams">dojo\..*,^struts\..*,^session\..*,^request\..*,^application\..*,^servlet(Request|Response)\..*,parameters\...*</param>
			    </interceptor-ref>
			 <!-- END OF THE TRICK -->
			    <interceptor-ref name="prepare"/>
			    <interceptor-ref name="chain"/>
			    <interceptor-ref name="scopedModelDriven"/>
			    <interceptor-ref name="modelDriven"/>
			    <interceptor-ref name="fileUpload"/>
			    <interceptor-ref name="checkbox"/>
			    <interceptor-ref name="multiselect"/>
			    <interceptor-ref name="staticParams"/>
			    <interceptor-ref name="actionMappingParams"/>
			    <interceptor-ref name="params">
			        <param name="excludeParams">dojo\..*,^struts\..*,^session\..*,^request\..*,^application\..*,^servlet(Request|Response)\..*,parameters\...*</param>
			    </interceptor-ref>
			    <interceptor-ref name="conversionError"/>
			    <interceptor-ref name="validation">
			        <param name="excludeMethods">input,back,cancel,browse</param>
			    </interceptor-ref>
			    <interceptor-ref name="workflow">
			        <param name="excludeMethods">input,back,cancel,browse</param>
			    </interceptor-ref>
			    <interceptor-ref name="debugging"/>
			</interceptor-stack>
        	
        	<interceptor-stack name="mySchoolCommonInterceptors">
        		<interceptor-ref name="allYourParamsAreBelongToUsStack"></interceptor-ref>
                <interceptor-ref name="commonSessionInterceptor"/>
               <!--  <interceptor-ref name="commonLoginInterceptor"/> -->
            </interceptor-stack>        	
		</interceptors>
						
 		<!-- <global-results>
  			<result name="globalError" type="tiles">/GlobalError.tiles</result>
  			<result name="sessionTimeout">jsp/Login.jsp</result>
		</global-results> -->
	<!--  -->	
		<!-- <global-exception-mappings>
			<exception-mapping exception="java.sql.SQLException" result="globalError"/>
		  	<exception-mapping exception="java.lang.Exception" result="globalError"/>
		</global-exception-mappings>  -->
				
		<action name="login" class="loginAction">
			<interceptor-ref name="allYourParamsAreBelongToUsStack"></interceptor-ref>
			<result name="success" type="tiles">/SchoolLandingPage.tiles</result>
			<result name="usersuccess" type="tiles">/ConfigurationMenuPage.tile</result>
			<result name="failure">jsp/Login.jsp</result>
			<result name="input">jsp/Login.jsp</result>
		</action>

		<action name="home" class="loginAction" method="home">
			<interceptor-ref name="mySchoolCommonInterceptors"/>
			<result name="success" type="tiles">/SchoolLandingPage.tiles</result>
			<result name="failure">jsp/Login.jsp</result>
			<result name="input">jsp/Login.jsp</result>
		</action>

		<action name="logout" class="loginAction" method="logout">
		<interceptor-ref name="mySchoolCommonInterceptors"/>
			<result name="success" type="tiles">/SchoolLandingPage.tiles</result>
			<result name="failure">jsp/Login.jsp</result>
			<result name="input">jsp/Login.jsp</result>
		</action>
			
		<action name="ClassSection*Action"  class="classSectionAction">
			<param name="actionTypeValue">{1}</param>
			<interceptor-ref name="mySchoolCommonInterceptors"/>
			<result name="success" type="tiles">/ClassSectionPage.tiles</result>
			<result name="failure" type="tiles">/ClassSectionPage.tiles</result>
			<result name="input" type="tiles">/ClassSectionPage.tiles</result>
		</action>

		<action name="ClassOperation*Action"  class="classSectionAction" method="perform{1}">
			<interceptor-ref name="mySchoolCommonInterceptors"/>
			<result name="success"  type="tiles">/ClassSectionCreateViewPage.tiles</result>
			<result name="failure" type="tiles">/ClassSectionPage.tiles</result>
			<result name="input" type="tiles">/ClassSectionPage.tiles</result>
		</action>
		
		<action name="forgot">
			<interceptor-ref name="mySchoolCommonInterceptors"/>
			<param name="errorMesage"></param>
			<result>jsp/ForgotPassword.jsp</result>
		</action>
		
		<action name="verifyUser" class="forgotPasswordAction">
			<interceptor-ref name="mySchoolCommonInterceptors"/>
			<result name="success">jsp/ForgotPassword.jsp</result>
			<result name="failure">jsp/ForgotPassword.jsp</result>
		</action>
		
		<action name="validateSecurityAnswers" class="forgotPasswordAction" method="validateSecurityAnswers">
			<interceptor-ref name="mySchoolCommonInterceptors"/>
			<result name="success">jsp/ForgotPassword.jsp</result>
			<result name="failure">jsp/ForgotPassword.jsp</result>
		</action>
		
		<action name="resetPassword" class="forgotPasswordAction" method="resetPassword">
			<interceptor-ref name="mySchoolCommonInterceptors"/>
			<result name="success">jsp/Login.jsp</result>
			<result name="failure">jsp/ForgotPassword.jsp</result>
		</action>
	
		<!-- Subjects -->
		<action name="schoolSubject*Action"  class="schoolSubjectsAction" method="perform{1}">
			<interceptor-ref name="mySchoolCommonInterceptors"/>
			<result name="success"  type="tiles">/SchoolSubjectPage.tiles</result>
			<result name="failure" type="tiles">/SchoolSubjectPage.tiles</result>
			<result name="input" type="tiles">/SchoolSubjectPage.tiles</result>
		</action>
		
		<!-- functionalContent - configurationalContent hide div etc -->
		<action name="functionalContent" class="forwardAction">
			<interceptor-ref name="mySchoolCommonInterceptors"/>
			<param name="display">functionalContent</param>
			<result type="tiles" >/SchoolLandingPage.tiles</result>
		</action>
		
		<action name="configurationalContent" class="forwardAction">
			<interceptor-ref name="mySchoolCommonInterceptors"/>
			<param name="display">configurationalContent</param>
			<result type="tiles">/SchoolLandingPage.tiles</result>
		</action>
		
		<!-- Class action -->
		<action name="schoolClass*Action" class="schoolClassAction" method="perform{1}">
			<interceptor-ref name="mySchoolCommonInterceptors"/>
			<param name="errorMesage">1m</param>
			<result type="tiles">/SchoolClassPage.tiles</result>
		</action>
		
		<!-- Section action -->
		<action name="classSection*Action" class="classSectionAction" method="perform{1}">
			<interceptor-ref name="mySchoolCommonInterceptors"/>
			<param name="errorMesage">1m</param>
			<result name="success" type="tiles">/ClassSectionPage.tiles</result>
		</action>
		
		<action name="studentRegistration*Action" class="studentRegistrationAction" method="perform{1}">
			<interceptor-ref name="mySchoolCommonInterceptors"/>
			<param name="errorMesage">1m</param>
			<result name="success" type="tiles">/StudentRegistrationPage.tiles</result>
		</action>
		
		<action name="subjectAction">
			<interceptor-ref name="mySchoolCommonInterceptors"/>
			<param name="errorMesage">1m</param>
			<result type="tiles">/SchoolSubjectPage.tiles</result>
		</action>	
		
		<action name="staff*Action" class="staffAction" method="perform{1}">
			<param name="staffActionType">{1}</param>
			<interceptor-ref name="mySchoolCommonInterceptors"/>
			<result name="success" type="tiles">/StaffPage.tiles</result>
			<result name="failure" type="tiles">/StaffPage.tiles</result>
			<result name="input" type="tiles">/StaffPage.tiles</result>
		</action>
		
		<action name="staffLeavesCreateAction" class="staffLeavesAction">
			<interceptor-ref name="mySchoolCommonInterceptors"/>
			<result name="success" type="tiles">/StaffLeavesPage.tiles</result>
			<result name="failure" type="tiles">/StaffLeavesPage.tiles</result>
			<result name="input" type="tiles">/StaffLeavesPage.tiles</result>
		</action>
			
	</package>
</struts>