<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.enable.DynamicMethodInvocation" value="false" />
	<constant name="struts.devMode" value="false" />
	<constant name="struts.custom.i18n.resources" value="global" />

	<package name="default" extends="struts-default" namespace="/">
		<result-types>
			<result-type name="tiles"
				class="org.apache.struts2.views.tiles.TilesResult" />
		</result-types>
		
		<interceptors>
    		<interceptor name="commonSessionInterceptor"
        		class="com.myschool.interceptors.CommonSessionInterceptor" />
        	<interceptor name="commonLoginInterceptor"
        		class="com.myschool.interceptors.CommonLoginInterceptor" />
        	
        	<interceptor-stack name="mySchoolCommonInterceptors">
                <interceptor-ref name="commonSessionInterceptor"/>
                <interceptor-ref name="commonLoginInterceptor"/>
            </interceptor-stack>        	
		</interceptors>
						
		<global-results>
  			<result name="globalError" type="tiles">/GlobalError.tiles</result>
  			<result name="sessionTimeout">jsp/Login.jsp</result>
		</global-results>
		
		<global-exception-mappings>
		  <exception-mapping exception="java.lang.Exception" result="globalError"/>
		</global-exception-mappings>
				
		<action name="login" class="loginClass">
			<result name="success" type="tiles">/SchoolLandingPage.tiles</result>
			<result name="failure">jsp/Login.jsp</result>
			<result name="input">jsp/Login.jsp</result>
		</action>

		<action name="home" class="loginClass" method="home">
			<interceptor-ref name="mySchoolCommonInterceptors"/>
			<result name="success" type="tiles">/SchoolLandingPage.tiles</result>
			<result name="failure">jsp/Login.jsp</result>
			<result name="input">jsp/Login.jsp</result>
		</action>

		<action name="logout" class="loginClass" method="logout">
			<interceptor-ref name="mySchoolCommonInterceptors"/>
			<result name="success" type="tiles">/SchoolLandingPage.tiles</result>
			<result name="failure">jsp/Login.jsp</result>
			<result name="input">jsp/Login.jsp</result>
		</action>

		<action name="SchoolClass*Action"  class="schoolClassAction">
			<param name="actionType">{1}</param>
			<interceptor-ref name="mySchoolCommonInterceptors"/>
			<result type="tiles" name="success">/SchoolClassAction.tiles</result>
			<result name="input">/SchoolClassAction.tiles</result>
		</action>

	</package>
</struts>